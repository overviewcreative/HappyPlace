{
    "key": "group_api_integrations_performance",
    "title": "Phase 4 Day 4-7: API Integrations & Performance Optimization",
    "fields": [
        {
            "key": "field_api_perf_tab_api_settings",
            "label": "API Settings",
            "name": "",
            "type": "tab",
            "placement": "top"
        },
        {
            "key": "field_api_mls_integration_enabled",
            "label": "Enable MLS Integration",
            "name": "api_mls_integration_enabled",
            "type": "true_false",
            "instructions": "Enable automatic MLS data synchronization",
            "default_value": 0,
            "ui": 1
        },
        {
            "key": "field_api_mls_source",
            "label": "MLS Data Source",
            "name": "api_mls_source",
            "type": "select",
            "instructions": "Select the primary MLS data source",
            "choices": {
                "local": "Local MLS",
                "national": "National MLS Network", 
                "custom": "Custom API Endpoint"
            },
            "default_value": "local",
            "conditional_logic": [
                [
                    {
                        "field": "field_api_mls_integration_enabled",
                        "operator": "==",
                        "value": "1"
                    }
                ]
            ]
        },
        {
            "key": "field_api_mls_sync_frequency",
            "label": "MLS Sync Frequency",
            "name": "api_mls_sync_frequency",
            "type": "select",
            "instructions": "How often to sync listing data from MLS",
            "choices": {
                "realtime": "Real-time (webhook)",
                "15min": "Every 15 minutes",
                "hourly": "Hourly",
                "daily": "Daily"
            },
            "default_value": "hourly",
            "conditional_logic": [
                [
                    {
                        "field": "field_api_mls_integration_enabled",
                        "operator": "==",
                        "value": "1"
                    }
                ]
            ]
        },
        {
            "key": "field_api_google_maps_enhanced",
            "label": "Enhanced Google Maps Features",
            "name": "api_google_maps_enhanced",
            "type": "checkbox",
            "instructions": "Enable advanced Google Maps API features",
            "choices": {
                "streetview": "Street View Integration",
                "satellite": "High-res Satellite Imagery",
                "traffic": "Real-time Traffic Data",
                "places": "Nearby Places Auto-population",
                "directions": "Driving Directions",
                "elevation": "Elevation Profiles"
            },
            "default_value": ["places", "streetview"]
        },
        {
            "key": "field_api_external_data_sources",
            "label": "External Data Sources",
            "name": "api_external_data_sources",
            "type": "checkbox",
            "instructions": "Enable integration with external data providers",
            "choices": {
                "walk_score": "Walk Score API",
                "school_data": "School District Data",
                "crime_stats": "Crime Statistics",
                "demographics": "Census Demographics",
                "market_trends": "Market Trend Analysis",
                "property_history": "Property History Reports"
            }
        },
        {
            "key": "field_api_perf_tab_caching",
            "label": "Performance & Caching",
            "name": "",
            "type": "tab",
            "placement": "top"
        },
        {
            "key": "field_api_cache_strategy",
            "label": "Caching Strategy",
            "name": "api_cache_strategy",
            "type": "select",
            "instructions": "Choose the primary caching strategy for listings",
            "choices": {
                "aggressive": "Aggressive Caching (Best Performance)",
                "balanced": "Balanced Caching (Recommended)",
                "minimal": "Minimal Caching (Real-time Data)",
                "custom": "Custom Cache Rules"
            },
            "default_value": "balanced"
        },
        {
            "key": "field_api_cache_durations",
            "label": "Cache Duration Settings",
            "name": "api_cache_durations",
            "type": "group",
            "instructions": "Configure cache durations for different data types",
            "sub_fields": [
                {
                    "key": "field_api_cache_listings",
                    "label": "Listing Data Cache (minutes)",
                    "name": "listing_cache",
                    "type": "number",
                    "default_value": 30,
                    "min": 5,
                    "max": 1440
                },
                {
                    "key": "field_api_cache_images",
                    "label": "Image Cache (hours)",
                    "name": "image_cache",
                    "type": "number",
                    "default_value": 24,
                    "min": 1,
                    "max": 168
                },
                {
                    "key": "field_api_cache_market_data",
                    "label": "Market Data Cache (hours)",
                    "name": "market_cache",
                    "type": "number",
                    "default_value": 6,
                    "min": 1,
                    "max": 72
                },
                {
                    "key": "field_api_cache_search_results",
                    "label": "Search Results Cache (minutes)",
                    "name": "search_cache",
                    "type": "number",
                    "default_value": 15,
                    "min": 1,
                    "max": 60
                }
            ]
        },
        {
            "key": "field_api_lazy_loading",
            "label": "Lazy Loading Options",
            "name": "api_lazy_loading",
            "type": "checkbox",
            "instructions": "Enable lazy loading for better performance",
            "choices": {
                "images": "Listing Images",
                "maps": "Google Maps",
                "search_results": "Search Results",
                "agent_info": "Agent Information",
                "property_details": "Property Details",
                "neighborhood_data": "Neighborhood Data"
            },
            "default_value": ["images", "maps", "search_results"]
        },
        {
            "key": "field_api_cdn_integration",
            "label": "CDN Integration",
            "name": "api_cdn_integration",
            "type": "group",
            "instructions": "Configure Content Delivery Network settings",
            "sub_fields": [
                {
                    "key": "field_api_cdn_enabled",
                    "label": "Enable CDN",
                    "name": "cdn_enabled",
                    "type": "true_false",
                    "default_value": 0,
                    "ui": 1
                },
                {
                    "key": "field_api_cdn_provider",
                    "label": "CDN Provider",
                    "name": "cdn_provider",
                    "type": "select",
                    "choices": {
                        "cloudflare": "Cloudflare",
                        "aws": "AWS CloudFront",
                        "google": "Google Cloud CDN",
                        "custom": "Custom CDN"
                    },
                    "conditional_logic": [
                        [
                            {
                                "field": "field_api_cdn_enabled",
                                "operator": "==",
                                "value": "1"
                            }
                        ]
                    ]
                },
                {
                    "key": "field_api_cdn_url",
                    "label": "CDN Base URL",
                    "name": "cdn_url",
                    "type": "url",
                    "placeholder": "https://cdn.yoursite.com",
                    "conditional_logic": [
                        [
                            {
                                "field": "field_api_cdn_enabled",
                                "operator": "==",
                                "value": "1"
                            }
                        ]
                    ]
                }
            ]
        },
        {
            "key": "field_api_perf_tab_monitoring",
            "label": "Analytics & Monitoring",
            "name": "",
            "type": "tab",
            "placement": "top"
        },
        {
            "key": "field_api_performance_monitoring",
            "label": "Performance Monitoring",
            "name": "api_performance_monitoring",
            "type": "checkbox",
            "instructions": "Enable performance monitoring features",
            "choices": {
                "api_response_times": "API Response Time Tracking",
                "database_queries": "Database Query Monitoring",
                "cache_hit_rates": "Cache Hit Rate Analysis",
                "error_tracking": "Error Rate Tracking",
                "user_experience": "User Experience Metrics",
                "page_load_times": "Page Load Time Monitoring"
            },
            "default_value": ["api_response_times", "cache_hit_rates", "error_tracking"]
        },
        {
            "key": "field_api_analytics_dashboard",
            "label": "Analytics Dashboard",
            "name": "api_analytics_dashboard",
            "type": "group",
            "instructions": "Configure the performance analytics dashboard",
            "sub_fields": [
                {
                    "key": "field_api_dashboard_enabled",
                    "label": "Enable Analytics Dashboard",
                    "name": "dashboard_enabled",
                    "type": "true_false",
                    "default_value": 1,
                    "ui": 1
                },
                {
                    "key": "field_api_dashboard_access",
                    "label": "Dashboard Access Level",
                    "name": "dashboard_access",
                    "type": "select",
                    "choices": {
                        "admin": "Administrators Only",
                        "editor": "Editors and Above",
                        "author": "Authors and Above",
                        "custom": "Custom Role"
                    },
                    "default_value": "admin",
                    "conditional_logic": [
                        [
                            {
                                "field": "field_api_dashboard_enabled",
                                "operator": "==",
                                "value": "1"
                            }
                        ]
                    ]
                },
                {
                    "key": "field_api_alert_thresholds",
                    "label": "Alert Thresholds",
                    "name": "alert_thresholds",
                    "type": "group",
                    "sub_fields": [
                        {
                            "key": "field_api_slow_response",
                            "label": "Slow Response Alert (seconds)",
                            "name": "slow_response",
                            "type": "number",
                            "default_value": 3,
                            "min": 1,
                            "max": 30,
                            "step": 0.5
                        },
                        {
                            "key": "field_api_error_rate",
                            "label": "Error Rate Alert (%)",
                            "name": "error_rate",
                            "type": "number",
                            "default_value": 5,
                            "min": 1,
                            "max": 50
                        },
                        {
                            "key": "field_api_cache_miss_rate",
                            "label": "Cache Miss Rate Alert (%)",
                            "name": "cache_miss_rate",
                            "type": "number",
                            "default_value": 80,
                            "min": 50,
                            "max": 95
                        }
                    ],
                    "conditional_logic": [
                        [
                            {
                                "field": "field_api_dashboard_enabled",
                                "operator": "==",
                                "value": "1"
                            }
                        ]
                    ]
                }
            ]
        },
        {
            "key": "field_api_user_behavior_tracking",
            "label": "User Behavior Tracking",
            "name": "api_user_behavior_tracking",
            "type": "checkbox",
            "instructions": "Track user behavior for optimization insights",
            "choices": {
                "search_patterns": "Search Pattern Analysis",
                "listing_views": "Listing View Tracking",
                "filter_usage": "Filter Usage Statistics",
                "session_duration": "Session Duration Tracking",
                "bounce_rate": "Bounce Rate Analysis",
                "conversion_tracking": "Lead Conversion Tracking"
