{
  "name": "happy-place-theme",
  "version": "2.0.0",
  "description": "Modern WordPress theme for independent real estate brokerages with integrated dashboard system",
  "private": true,
  "scripts": {
    "dev": "webpack --mode=development --watch",
    "build": "npm run clean && webpack --mode=production",
    "build:dev": "npm run clean && webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "serve": "webpack serve --mode=development",
    "clean": "rimraf assets/dist/*",
    "lint:js": "eslint assets/src/js --ext .js --fix",
    "lint:scss": "stylelint 'assets/src/scss/**/*.scss' --fix",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "wordpress",
    "theme",
    "real-estate",
    "dashboard",
    "webpack",
    "scss",
    "modern"
  ],
  "author": "Happy Place Housing",
  "license": "GPL-2.0-or-later",
  "homepage": "https://happyplacehousing.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/happyplacehousing/happy-place-theme.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not IE 11"
  ],
  "dependencies": {
    "chart.js": "^4.4.0",
    "core-js": "^3.44.0",
    "date-fns": "^3.6.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "cssnano": "^7.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.9.0",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sass": "^1.77.0",
    "sass-loader": "^14.2.1",
    "style-loader": "^4.0.0",
    "stylelint": "^16.3.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.101.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-manifest-plugin": "^5.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/assets/src/js/$1",
      "^@components/(.*)$": "<rootDir>/assets/src/js/components/$1",
      "^@utils/(.*)$": "<rootDir>/assets/src/js/utils/$1"
    },
    "collectCoverageFrom": [
      "assets/src/js/**/*.js",
      "!assets/src/js/**/*.test.js"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jquery": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": "warn",
      "no-unused-vars": "warn"
    },
    "globals": {
      "wp": "readonly",
      "jQuery": "readonly",
      "$": "readonly",
      "hphTheme": "readonly"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss"
    ],
    "rules": {
      "selector-class-pattern": "^[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
      "scss/at-import-partial-extension": null,
      "declaration-empty-line-before": null
    }
  }
}
