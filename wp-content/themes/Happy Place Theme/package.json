{
  "name": "happy-place-theme",
  "version": "3.0.0",
  "description": "Modern WordPress theme for real estate professionals with advanced dashboard",
  "main": "index.js",
  "scripts": {
    "dev": "./build-simple.sh --dev --watch",
    "build": "./build-simple.sh",
    "build:enhanced": "./build-enhanced.sh",
    "build:dev": "./build-simple.sh --dev",
    "watch": "./build-simple.sh --dev --watch",
    "clean": "rm -rf assets/dist/*",
    "lint": "echo 'Linting built into build process'",
    "test": "echo 'Tests will be added in Phase 4'",
    "format": "prettier --write \"assets/src/**/*.{js,scss,css}\"",
    "prepare": "echo 'Build system ready'"
  },
  "keywords": [
    "wordpress",
    "theme",
    "real-estate",
    "dashboard",
    "modern"
  ],
  "author": "Happy Place Housing",
  "license": "GPL-2.0",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@webpack-cli/generators": "^3.0.7",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.0",
    "css-loader": "^7.1.2",
    "cssnano": "^7.1.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.5",
    "style-loader": "^3.3.0",
    "terser-webpack-plugin": "^5.3.14",
    "webpack": "^5.101.0",
    "webpack-assets-manifest": "^6.2.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "chart.js": "^4.3.0",
    "date-fns": "^2.30.0",
    "fabric": "^5.3.0",
    "lodash": "^4.17.21"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  }
}
