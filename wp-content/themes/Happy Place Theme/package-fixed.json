{
  "name": "happy-place-theme",
  "version": "2.0.0",
  "description": "A modern WordPress theme for real estate professionals",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "build:sass": "npx sass assets/src/scss/main.scss assets/dist/css/main.css --style=compressed --no-source-map && npx sass assets/src/scss/single-listing.scss assets/dist/css/single-listing.css --style=compressed --no-source-map",
    "watch:sass": "npx sass assets/src/scss/main.scss assets/dist/css/main.css --watch --style=expanded --source-map",
    "clean": "rm -rf assets/dist/*",
    "lint:scss": "npx stylelint 'assets/src/scss/**/*.scss'",
    "test": "echo 'No tests configured'"
  },
  "keywords": [
    "wordpress",
    "theme",
    "real-estate"
  ],
  "author": "Your Name",
  "license": "GPL-2.0",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "cssnano": "^7.1.0",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.5",
    "webpack": "^5.100.2",
    "webpack-assets-manifest": "^6.2.1",
    "webpack-cli": "^6.0.1"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  }
}
